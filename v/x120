(use-modules
 (www server-utils cookies))

(define (die s . args)
  (apply fse (string-append s "~%") args)
  (exit #f))

(define (try string good)
  (let ((real (simple-parse-cookies string)))
    (vfso "real: ~S~%" real)
    (or (equal? good real)
        (die "misparse: ~S" real))))

(try "abc=def; z=z, ans=\"42\", abc=xyz"
     '(("abc" . "def; z=z")
       ("ans" . "\"42\"")
       ("abc" . "xyz")))

(exit #t)

;;; x120 ends here
